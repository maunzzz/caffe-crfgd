################################# EdgeNet ####################
## upsampling to original resolution
layer {
  name: "conv2_2_inpterp"
  type: "Interp"
  bottom: "conv2_2"
  top: "conv2_2_interp"
  interp_param {
    zoom_factor: 2
  }
}
layer {
  name: "conv3_3_inpterp"
  type: "Interp"
  bottom: "conv3_3"
  top: "conv3_3_interp"
  interp_param {
    zoom_factor: 4
  }
}
layer {
  name: "conv4_3_inpterp"
  type: "Interp"
  bottom: "conv4_3"
  top: "conv4_3_interp"
  interp_param {
    zoom_factor: 8
  }
}
layer {
  name: "conv_concat"
  type: "Concat"
  bottom: "conv2_2_interp"
  bottom: "conv3_3_interp"
  bottom: "conv4_3_interp"
  top: "conv_concat"
  concat_param {
    axis: 1
  }
}
layer {
  name: "edges"
  type: "Convolution"
  bottom: "conv_concat"
  top: "edge_maps"
  param {
    lr_mult: 0
    decay_mult: 1
  }
  param {
    lr_mult: 0
    decay_mult: 0
  }
  convolution_param {
    num_output: 3
    kernel_size: 1
    weight_filler {
      type: "gaussian"
      #std: 0.00001
    }
    bias_filler {
      type: "constant"
      #value: 0
    }
  }
}

##################
# crfgd - part
##################

#softmax is needed before ggdr-layer
layer {
  name: "softmax_pre"
  type: "Softmax"
  bottom: "fc8_interp"
  top: "score_pre"
  softmax_param {
    axis: 1
  }
}

layer {
  name: "softmax_pre_edge"
  type: "Softmax"
  bottom: "edge_maps"
  top: "deep_feature_dimension_mapping"
  softmax_param {
    axis: 1
  }
}

layer {
    name: "crf_filterbank_ed"
    type: "CrfFilterbankEd"
    bottom: "score_pre"
    bottom: "deep_feature_dimension_mapping"
    top: "score_post"

	#propagate derivatives to score_pre but not edges
	propagate_down: true 
	propagate_down: false
	
    crffilterbanked_param {
        num_iterations: 5
        kernel_size: 9 # decides filter size of filter
        step_size_factor: 1 # gradient descent step size
        log_eps: 0.1 # unary energies in crf are created as -log(p_i + log_eps)
        unary_weight_init: 0.1
        debug_mode: false                
        use_cudnn: true
        init_filters: true
    }
}

